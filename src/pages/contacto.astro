---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="Contacto">
  <Fragment slot="header"><Header /></Fragment>

  <section class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="text-3xl font-bold tracking-tight">Contacto</h1>
    <p class="mt-2 text-stone-600">Escribinos por WhatsApp o Instagram.</p>

    <div class="mt-6 flex gap-3">
      <a target="_blank" class="rounded-lg bg-green-600 text-white px-5 py-3 font-medium hover:bg-green-700"
         href="https://wa.me/598">WhatsApp</a>
      <a target="_blank" class="rounded-lg border px-5 py-3 font-medium hover:bg-stone-100"
         href="https://instagram.com/">Instagram</a>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
